{
  "$schema": "https://raw.githubusercontent.com/webpro/knip/main/schema.json",
  "entry": [
    "src/app/**/*.{ts,tsx}",
    "src/pages/**/*.{ts,tsx}",
    "src/middleware.ts",
    "next.config.{js,ts}",
    "tests/**/*.ts",
    "supabase/functions/**/index.ts",
    "workers/**/*.{ts,tsx}"
  ],
  "project": [
    "src/**/*.{ts,tsx}",
    "packages/*/src/**/*.{ts,tsx}",
    "supabase/functions/**/*.{ts,tsx}",
    "workers/**/*.{ts,tsx}"
  ],
  "ignore": [
    "**/dist/**",
    "public/**",
    "scripts/**",
    "**/*.d.ts",
    "**/*.map"
  ]
}

